@model IEnumerable<MVCEmp.Data.Employee>

<h2>Employees</h2>
<a asp-action="Create">Add New Employee</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Department No</th>
            <th>Actions</th> <!-- Add Actions column for Edit/Delete -->
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.DepartmentNo</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@employee.Id" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4">No employees found.</td>
            </tr>
        }
    </tbody>
</table>
