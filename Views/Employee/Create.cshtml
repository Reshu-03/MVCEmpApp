@model MVCEmp.Data.Employee

<h2>Add Employee</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Id">Employee ID</label>
        <input type="number" asp-for="Id" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="EmployeeName">Name</label>
        <input type="text" asp-for="EmployeeName" class="form-control" required />
    </div>
        @* <div class="form-group">
        <label for="EmployeeName">Salary</label>
        <input type="number" asp-for="Salary" class="form-control" required />
    </div> *@
    <div class="form-group">
        <label for="DepartmentNo">Department No</label>
        <input type="number" asp-for="DepartmentNo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Save Employee</button>
</form>